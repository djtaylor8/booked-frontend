// 1
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 2
generator client {
  provider = "prisma-client-js"
}

// 3
model Audition {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  description String
  location    String
  createdBy   User?     @relation(fields: [createdById], references: [id])
  createdById Int?
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  auditions Audition[]
}
